.ad-wrap {
  margin: 20px;
  border-radius: 5px;
  background: #eee;
  padding: 10px;
  box-shadow: 5px 5px 5px #bbb inset;
}

.title{
  font-size: 18px;
  color: var(--primary-color);
  margin: 10px;
  padding: 10px;
  
}

.btm{
  display: flex;
  padding-top: 10px;
  align-items: center;
}

.btm .text{
  flex: 1;
}

.btm button{
  color: var(--primary-color);
}

image {
  width: 100%;
  object-fit: cover;
  height: 180px;
}

text {
  font-size: 20px;
}

.motal{
  position: absolute;
  transform: translate(-50%,-50%);
  height: 150px;
  width: 250px;
  left: 50%;
  top: 50%;
  background: #eee;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 5px 5px 5px #bbb inset;
  display: flex;
  align-items: center;
  justify-content: center;
  word-wrap: break-word;
}
.small{
  width: 100%;
  padding: 10px;
  font-size: 14px;
}